<?xml version="1.0" encoding="UTF-8"?>
<project name="HelloWorld" basedir="." default="main">
    <property name="dir.src"     value="src"/>
	<property name="dir.lib"     value="lib"/>
    <property name="dir.build"   value="build"/>
    <property name="dir.classes" value="${dir.build}/classes"/>
    <property name="dir.jar"     value="${dir.build}/jar"/>
	
	<path id="compile.path">   
		<fileset dir="${dir.lib}">
			<include name="**/*.jar"/>
		</fileset>
		<pathelement path="${dir.build}"/>
	</path>

    <target name="clean">
        <delete dir="${dir.build}"/>
    </target>

    <target name="compile">
        <mkdir dir="${dir.classes}"/>
        <javac srcdir="${dir.src}" destdir="${dir.classes}" classpathref="compile.path" encoding="utf-8"/>
    </target>
	
	<target name="test" depends="compile">
		<junit printsummary="true">
			<classpath path="${dir.classes}" />
			<classpath refid="compile.path" />
			<test name="BlackBoxTest.queryBridgeWords1"></test>
		</junit>
	</target>
	
    <target name="main" depends="clean,test"/>
</project>
